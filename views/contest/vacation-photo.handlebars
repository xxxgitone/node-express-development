<form class="form-horizontal" role="form" action="/contest/vacation-photo/{{year}}/{{month}}" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<label for="filedName" class="col-sm-2 control-label">Name</label>
		<div class="col-sm-4">
			<input type="text" name="name" class="form-control" id="filedName" required>
		</div>
	</div>
	<div class="form-group">
		<label for="filedEmail" class="col-sm-2 control-label">Email</label>
		<div class="col-sm-4">
			<input type="email" name="email" class="form-control" id="filedEmail" required>
		</div>
	</div>
	<div class="form-group">
		<label for="fieldPhoto" class="col-sm-2 control-label">Vacation Photo</label>
		<div class="col-sm-4">
			<input type="file" name="photo" class="form-control" id="fieldPhoto" required accept="image/*">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-default">Submit</button>
		</div>
	</div>
</form>

